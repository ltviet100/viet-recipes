<div class="list-group">
  <% @chefs.each do |chef| %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class= "list-group-item active text-center">
          <%= link_to gravatar_for(chef), chef_path(chef)  %>
          <p><%= link_to chef.chefname.capitalize, chef_path(chef) %></p>
        </div>

        <ul class="list-group">
          <li class="list-group-item">
            <span class="badge"><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></span>
            Total Recipes
          </li>
        </ul>

        <ul class="list-group">
          <% if logged_in? && current_chef == chef %>
            <li class="list-group-item list-item">
              <%= image_tag("edit.png") %><%= link_to 'Edit', edit_chef_path(chef) %>
              <%= image_tag("delete.png") %><%= link_to 'Remove', chef_path(chef), method: :delete, data: { confirm: "Are you sure?" } %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
